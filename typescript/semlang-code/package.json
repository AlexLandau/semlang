{
    "name": "semlang-code",
    "displayName": "semlang-code",
    "description": "foo",
    "version": "0.0.1",
    "publisher": "donthaveoneyet",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:semlang"
    ],
    "main": "./out/main",
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
    "contributes": {
        "languages": [
            {
                "id": "semlang",
                "aliases": [
                    "Semlang",
                    "semlang"
                ],
                "extensions": [
                    ".sem",
                    ".sem1",
                    ".sem2"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "semlang",
                "scopeName": "source.semlang",
                "path": "./syntaxes/semlang.tmLanguage.json"
            }
        ],
        "commands": [
			{
				"command": "semlang.openTranspilation",
				"title": "Semlang: Open transpiled sem1"
			}
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "semlang.openTranspilation",
                    "when": "editorLangId == semlang"
                }
            ]
        }
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.0"
    },
    "devDependencies": {
        "@types/node": "^10.14.17",
        "@types/vscode": "^1.34.0",
        "typescript": "~3.7.5"
    }
}
